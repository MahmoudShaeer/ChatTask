<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#faf8db"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/person"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:id="@+id/user_friend_name"
        android:layout_toLeftOf="@+id/start_convarstaion"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginRight="59dp"
        android:layout_marginLeft="10dp"
        android:text="Mahmoud shaeer"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_toEndOf="@+id/imageView" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/massage"
        android:id="@+id/start_convarstaion"
        android:layout_alignBottom="@+id/user_friend_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>